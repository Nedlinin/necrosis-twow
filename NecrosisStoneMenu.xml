<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\FrameXML\UI.xsd">
	<Button name="NecrosisStoneMenuButton" hidden="false" enableMouse="true"  toplevel="true" parent="UIParent" movable="true">
		<Size>
			<AbsDimension x="34" y="34"/>
		</Size>
		<Anchors>
			<Anchor point="CENTER" relativeTo="UIParent" relativePoint="CENTER">
				<Offset>
					<AbsDimension x="17" y="-100"/>
				</Offset>
			</Anchor>
		</Anchors>
		<Scripts>
			<OnLoad>
				this:RegisterForDrag("LeftButton");
				this:RegisterForClicks("LeftButtonUp", "MiddleButtonUp", "RightButtonUp");
				HideUIPanel(this);
			</OnLoad>
			<OnEnter>
				Necrosis_BuildTooltip(this, "Stone", "ANCHOR_RIGHT");
			</OnEnter>
			<OnLeave>
				GameTooltip:Hide();
			</OnLeave>
			<OnClick>
				Necrosis_StoneMenu(arg1);
			</OnClick>
			<OnDragStart>
				if not NecrosisLockServ then Necrosis_OnDragStart(this); end
			</OnDragStart>
			<OnDragStop>
				Necrosis_OnDragStop(this);
			</OnDragStop>
			<OnMouseUp>
				Necrosis_OnDragStop(this);
			</OnMouseUp>
		</Scripts>
		<NormalTexture file="Interface\AddOns\Necrosis\UI\StoneMenuButton-01"/>
		<HighlightTexture alphaMode="ADD" file="Interface\AddOns\Necrosis\UI\AccentRing"/>
	</Button>

